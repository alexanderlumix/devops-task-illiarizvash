# MongoDB Environment Variables Example
# Copy this file to .env and fill in your actual values

# MongoDB Admin Credentials
MONGO_ADMIN_USER=admin
MONGO_ADMIN_PASSWORD=your_secure_admin_password_here

# Application Database Credentials
APP_DB_USER=appuser
APP_DB_PASSWORD=your_secure_app_password_here

# MongoDB Connection Settings
MONGO_HOST=127.0.0.1
MONGO_PORT=27017
MONGO_DB=appdb
MONGO_REPLICA_SET=rs0

# MongoDB Direct Connection (for Node.js app)
MONGO_DIRECT_CONNECTION=true

# Application Settings
NODE_ENV=development
GO_ENV=development

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
MAX_CONNECTIONS=10
CONNECTION_TIMEOUT=5000
QUERY_TIMEOUT=30000

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true 